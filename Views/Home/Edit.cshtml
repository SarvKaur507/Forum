@model Forum.Models.Dtos.PostDto
@{
    ViewData["Title"] = "Edit Page";
}
<style>
    .card {
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
    }

    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f8f9fa;
    }
</style>
<body>
    <div class="card">
        <h2 class="card-title">Edit Post</h2>
        <form asp-action="Create" method="post">
            @Html.HiddenFor(model => model.PostId)
            <div class="form-group">
                <label for="Content">Content</label>
                @Html.TextBoxFor(model => model.Content, new { @class = "form-control", @id = "Content" })
            </div>
            <div class="form-group">
                <label for="PostType">Post Type</label>
                @Html.TextBoxFor(model => model.PosType, new { @class = "form-control", @id = "PosType" })
            </div>
            <button type="submit" class="btn">Save</button>
        </form>
    </div>
</body>